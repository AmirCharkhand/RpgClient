@inject IDialogService DialogService

<MudAppBar>
    <MudFab Variant="Variant.Filled" StartIcon="@Icons.Material.Rounded.Menu" Color="Color.Primary" OnClick="@OpenNavBar"/>
    <MudContainer Class="d-flex justify-end align-center gap-3 pa-0" MaxWidth="MaxWidth.False">
        @if (_isUserLoggedIn)
        {
            <MudText Typo="Typo.caption">Welcome @_userName</MudText>
            <MudChip Variant="Variant.Filled" Icon="@Icons.Material.Rounded.Logout" Color="Color.Secondary" OnClick="Logout">Logout</MudChip>
        }
        else
        {
            <MudChip Variant="Variant.Filled" Icon="@Icons.Material.Rounded.Login" Color="Color.Success" OnClick="OpenLoginDialog">Login</MudChip>
        }
        <MudFab Variant="Variant.Filled" StartIcon="@ThemeIcon()" Color="Color.Primary" OnClick="@OnToggleTheme"/>
    </MudContainer>
</MudAppBar>