
<MudDialog>
    <DialogContent>
        @if (!_isProgressDisabled)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Size="Size.Medium"/>
        }
        <MudTextField @bind-Value="_userName" Label="User Name" Variant="Variant.Text"/>
        <MudTextField @bind-Value="_password" Label="Password" Variant="Variant.Text" InputType="@_passwordInput" 
                      Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" AdornmentAriaLabel="Show Password" OnKeyDown="OnEnter"/>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Success" Disabled="_isLoginDisabled" OnClick="@LoginUser">Login</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@CloseDialog">Cancel</MudButton>
    </DialogActions>
</MudDialog>