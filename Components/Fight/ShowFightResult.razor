<MudDialog DisableSidePadding="true">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Rounded.SportsMartialArts" Class="mr-3 mb-n1"/>
            Fight Result
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer Style="max-height: 700px; overflow-y: scroll">
            @if (_isLoading)
            {
                <MudProgressCircular Indeterminate="true" Color="Color.Info" Size="Size.Large" Class="align-self-center"/>
            }
            else
            {
                @foreach (var text in _fightResult)
                {
                    <MudText Typo="Typo.body1">@text</MudText>
                    <MudDivider DividerType="DividerType.FullWidth" Class="my-1"/>
                }
            }
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudFab Color="Color.Error" StartIcon="@Icons.Material.Filled.Clear" OnClick="Close"/>
    </DialogActions>
</MudDialog>