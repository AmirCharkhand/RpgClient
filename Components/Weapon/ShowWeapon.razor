@using RPGClient.Models.Weapon

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Tertiary">
            <MudIcon Icon="@Icons.Material.Rounded.Hive" Size="Size.Large" Class="mr-3 mb-n1"/>
            @($"{CharacterName}'s Weapon")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudCard Elevation="14" Outlined="true">
            <MudCardContent>
                <MudText Typo="Typo.body1">Weapon Name: @Weapon.Name</MudText>
                <MudText Typo="Typo.body1">Weapon Damage: @Weapon.Damage</MudText>
            </MudCardContent>
        </MudCard>
    </DialogContent>
</MudDialog>

@code
{
    [Parameter] public string CharacterName { get; set; } = null!;
    [Parameter] public GetWeaponDto Weapon { get; set; } = null!;
}
