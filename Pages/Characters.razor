@using RPGClient.Components.Character
@page "/Characters"

<MudContainer Fixed="true" Class="d-flex justify-center mb-2">
    <Toolbar @ref="_toolbar"/>
</MudContainer>
<CharacterList SelectedRowsCallback="OnTableSelectedRowsChanged"/>

@code
{
    private Toolbar _toolbar = null!;
    
    private void OnTableSelectedRowsChanged(int itemsCount)
    {
        _toolbar.ChangeButtonsState(itemsCount);
    }
}